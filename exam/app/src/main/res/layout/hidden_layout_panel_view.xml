<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/hidden_layout_panel_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:padding="4dp"
                android:id="@+id/hidden_layout_panel_singer"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/grey_200"
                android:text="Singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="4dp"
                android:id="@+id/hidden_layout_panel_title"
                android:textSize="24sp"
                android:background="@color/black"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/hidden_layout_panel_down_btn"
            android:src="@drawable/ic_expand_more"
            android:background="@color/alpha"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <SeekBar
        android:clickable="true"
        android:id="@+id/hidden_layout_panel_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hidden_bottom_tab"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp" />

    <LinearLayout
        android:id="@+id/hidden_bottom_tab"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageButton
            android:id="@+id/hidden_layout_panel_music_list"
            android:background="@color/alpha"
            android:src="@drawable/ic_list"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/hidden_layout_panel_talk"
            android:background="@color/alpha"
            android:src="@drawable/ic_insert_comment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/hidden_layout_panel_menu"
            android:background="@color/alpha"
            android:src="@drawable/ic_more_vert"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>